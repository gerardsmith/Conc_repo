<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <EditText

        android:layout_marginTop="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText_physician"
        android:hint="@string/physician_name"
        android:textAlignment="textStart"
        android:layout_weight="1" />


    <EditText
        android:layout_marginTop="120dp"
        android:layout_below="@+id/editText_physician"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/editText_date"
        android:layout_weight="1"
        android:hint='Date: "dd/mm/yyyy"' />

    <EditText
        android:layout_marginTop="180dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:ems="10"
        android:id="@+id/editText_assessmenttime"
        android:hint='Assessment Time: "19:00"' />

    <EditText
        android:layout_marginTop="240dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:ems="10"
        android:id="@+id/editText_kickofftime"
        android:hint='Kick-Off Time: "19:00"'
        android:singleLine="false" />

</FrameLayout>