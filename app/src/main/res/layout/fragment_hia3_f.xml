<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    >

    <TextView
        android:text="@string/hia3a_7_sectionheader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView28"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        />

    <TextView
        android:text="@string/hia3a_71_sectionheader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView29"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="5dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="16sp"/>

    <TextView
        android:text="@string/ant_amn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView31"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="25dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="14sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="5dp">

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <RadioButton
                android:text="@string/no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkBox_ANT_AM_N"
                android:layout_weight="0.01"
                style="@android:style/Widget.CompoundButton.CheckBox"
                />

            <RadioButton
                android:text="@string/yes_dur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkBox_ANT_AM_Y"
                android:layout_weight="0.01"
                style="@android:style/Widget.CompoundButton.CheckBox"/>

        </RadioGroup>

        <EditText
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText9" />

    </LinearLayout>

    <TextView
        android:text="@string/ret_amn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView32"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="10dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="14sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="5dp">

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <RadioButton
                android:text="@string/no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkBox_RET_AM_N"
                android:layout_weight="0.11"
                style="@android:style/Widget.CompoundButton.CheckBox"/>

            <RadioButton
                android:text="@string/yes_dur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkBox_RET_AM_Y"
                android:layout_weight="1"
                style="@android:style/Widget.CompoundButton.CheckBox"/>

        </RadioGroup>

        <EditText
            android:layout_width="186dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText10" />
    </LinearLayout>

    <TextView
        android:text="@string/symp_check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView33"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="10dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="16sp"/>

    <ExpandableListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lvExp"/>

</LinearLayout>